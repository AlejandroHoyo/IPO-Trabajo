<Page x:Class="Lab_IPO.Personal"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lab_IPO"
      mc:Ignorable="d" 
      d:DesignHeight="725" d:DesignWidth="1086"
      Title="Personal"
      Background="#a1f7af">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="3"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="3"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3"/>
        </Grid.RowDefinitions>
        <ComboBox x:Name="tipoPersonalComboBox" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Center" Width="290" FontSize="20" FontFamily="Bahnschrift" SelectedIndex="0" Cursor="Hand" Background="#d0fbd7">
            <ComboBoxItem IsSelected="True" Content="Personal (Todos)"/>
            <ComboBoxItem IsSelected="False" Content="Personal Sanitario"/>
            <ComboBoxItem IsSelected="False" Content="Personal de Limpieza"/>
        </ComboBox>
        <ListBox x:Name="personalList" Grid.Column="1" Grid.Row="2" d:ItemsSource="{d:SampleData ItemCount=5}" VerticalAlignment="Bottom" Height="630" FontFamily="Bahnschrift" FontSize="20" Margin="0,0,0,5" Cursor="Hand" BorderBrush="black" BorderThickness="2" Background="#e7fdeb"/>
        <Label Grid.Column="2" Content="Datos del Personal" HorizontalAlignment="Center" Margin="0,0,0,0" Grid.Row="1" VerticalAlignment="Center" FontWeight="Bold" FontFamily="Bahnschrift" FontSize="36"/>
        <Grid Grid.Column="2" Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="225"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <GroupBox Header="Información Personal" FontFamily="Bahnschrift" FontWeight="Bold" FontSize="16" Background="#d0fbd7" BorderBrush="black" BorderThickness="2" Margin="5,5,5,5">
                <Grid>
                    <Border BorderBrush="black" BorderThickness="3" Width="180" Height="180" VerticalAlignment="Center" HorizontalAlignment="left" Margin="5,0,0,0" CornerRadius="3">
                        <Image x:Name="personalImagen" Source="Assets/Icons/user.png"/>
                    </Border>
                    <Grid VerticalAlignment="center" HorizontalAlignment="center" Margin="200,0,0,0" Width="530">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="300"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,0" Grid.Row="0">
                            <Image Source="Assets/Icons/id.png" Height="30" VerticalAlignment="center" HorizontalAlignment="Center"/>
                            <Label x:Name="nombrePersonalLabel" Content="Desconocido" VerticalAlignment="center" HorizontalAlignment="Center" FontSize="18"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,0" Grid.Row="2">
                            <Image Source="Assets/Icons/id.png" Height="30" VerticalAlignment="center" HorizontalAlignment="Center"/>
                            <Label x:Name="apellidosPersonalLabel" Content="Desconocido" VerticalAlignment="center" HorizontalAlignment="Center" FontSize="18"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,0" Grid.Row="4">
                            <Image Source="Assets/Icons/phone.png" Height="30" VerticalAlignment="center" HorizontalAlignment="Center"/>
                            <Label x:Name="telefonoPersonalLabel" Content="NaN" VerticalAlignment="center" HorizontalAlignment="Center" FontSize="18"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,0" Grid.Row="6">
                            <Image Source="Assets/Icons/cake.png" Height="30" VerticalAlignment="center" HorizontalAlignment="Center"/>
                            <Label x:Name="edadPersonalLabel" Content="Nan" VerticalAlignment="center" HorizontalAlignment="Center" FontSize="18"/>
                        </StackPanel>
                        <Border BorderBrush="black" BorderThickness="3" Width="120" Height="120" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,30,30,0" CornerRadius="40" Grid.Column="1" Grid.Row="0" Grid.RowSpan="7">
                            <Image x:Name="tipoPersonalImagen" Source="Assets/Icons/interrogacion.png" Margin="10,10,10,10"/>
                        </Border>
                        <Label x:Name="tipoPersonalLabel" Content="Desconocido" VerticalAlignment="center" HorizontalAlignment="Center" FontSize="18" Margin="120,0,0,120" Grid.Row="0" Grid.Column="1" Grid.RowSpan="7"/>
                    </Grid>
                </Grid>
            </GroupBox>
            <Grid Grid.Column="2" Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <GroupBox Header="Clientes Atendidos" Grid.Column="0" FontFamily="Bahnschrift" FontWeight="Bold" FontSize="16" BorderBrush="black" BorderThickness="2" Margin="5,5,5,5">
                    <ListBox x:Name="atendidosList" d:ItemsSource="{d:SampleData ItemCount=5}" Background="#e7fdeb"/>
                </GroupBox>
                <GroupBox Header="Citas Previstas" Grid.Column="1" FontFamily="Bahnschrift" FontWeight="Bold" FontSize="16" BorderBrush="black" BorderThickness="2" Margin="5,5,5,5">
                    <ListBox x:Name="citasPrevistasList" d:ItemsSource="{d:SampleData ItemCount=5}" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Background="#e7fdeb"/>
                </GroupBox>
            </Grid>
        </Grid>
    </Grid>
</Page>
